    <div class="search_top">
        <div id="topsearch">
            <!--form name="MultiSearchForm" onsubmit="return SearchCheck(this)" action="./search.php" title="통합검색폼"-->
            <input type="hidden" name="" value="">
            <input type="hidden" name="" value="">
            <input type="text" name="keyword" id="keyword" value="" title="키워드입력" placeholder="검색어를 입력해주세요" class="tt" onKeyup=myFunction();>
            <input type="image" src="/img/ic_search@2x.png" title="검색질의보내기" alt="검색하기" class="bt" onClick=myFunction();>
            <!--/form-->
        </div>
    </div>
    </nav>
    <div class="wrap">
        <div class="list_wrap">
            <ul class="listview">
	        <%
                for(var i=0; i < ret.length; i++) { 
            %>
<li><a href="<%=ret[i].LINK%>" class="btn_view_tit"><h2><script type="text/javascript">document.write(htmlEntities('<%=ret[i].TITLE%>'))</script><br></h2><h3><script type="text/javascript">document.write(htmlEntities('<%=ret[i].CONTENT%>'))</script><br><br><div><script type="text/javascript">document.write(getFormatDate('<%=ret[i].PUB_DATE%>'));</script></div></h3></a></li>
            <%     
                } 
            %>
            
</ul>
<!-- //리스트끝 -->
        </div>
        <!--a href="https://www.korda.im" target="_blank"><button type="button">팝업</button></a-->
    </div>
    <script type="text/javascript">
        function hideLoadingImg()  {          //페이지가 로드 되면 로딩 화면을 없애주는 것
            let obj = document.getElementById("loading");
            obj.style.display="none";
        }
    </script>
  </body>
</html>



